<resources>
  <declare-styleable name="SlidingPanel">
    <attr name="speed" format="integer" />
    <attr name="targetHeight" format="dimension" />
  </declare-styleable>
  <declare-styleable name="CommentItem">
	  <attr name="text" format="string" />
	  <attr name="source" format="string" />
	  <!-- is this a loading item? -->
	  <attr name="loading" format="boolean" />
	  <!-- this could be used to push intermediate ads maybe? or mass messages from the system -->
	  <attr name="show_icons" format="boolean" />
  </declare-styleable>
</resources>
